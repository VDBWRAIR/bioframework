{
    "cmd": "filter_reads",
    "desc": "Filter reads based on criteria",
    "opts": [{
        "short": "n",
        "long":  "max-n",
        "name": "max_n",
        "description": "Max number of n's to allow",
        "required" : true
    }],
    "paired_cmd": "cutadapt --interleave ${max_n|arg} ${output|arg} -p {reverseoutput} ${input|else('--format fastq /dev/stdin')}",
    "unpaired_cmd": "cutadapt ${input|else('--format fastq /dev/stdin')} ${max_n|arg} ${output|arg}"
}

